# Telegram bot tokens
MAIN_BOT_TOKEN=YOUR_MAIN_BOT_TOKEN
LOGIN_BOT_TOKEN=YOUR_LOGIN_BOT_TOKEN

# Owner telegram user id (optional, for /stats etc.)
OWNER_ID=0

# Encryption key for Fernet: 
#   Option A: 32-byte urlsafe base64 key (44 chars, ends with '=')
#   Option B: 64-char hex string (we'll convert it automatically)
ENCRYPTION_KEY=GENERATE_WITH: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# SQLite DB path
DB_PATH=data/spinify.sqlite

# Optional gate: users must be members of BOTH to use the bots.
# Leave blank to disable the gate.
TIMEZONE=Asia/Kolkata
GATE_CHANNEL=
GATE_GROUP=
